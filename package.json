{
  "name": "noori-ui",
  "version": "0.0.1",
  "description": "0 config Next js UI library",
  "author": "cjpablo92",
  "license": "MIT",
  "repository": "git@github.com:cjpablo92/noori-ui.git",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=14"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/example"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test:ci": "run-s test:unit test:lint test:build",
    "test": "jest --watch",
    "test:build": "run-s build",
    "test:lint": "eslint . --ext .ts,.tsx",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.12.10",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.19.8",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/styled-components": "^5.1.7",
    "jest-styled-components": "^7.0.3",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^26.5.3",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "styled-components": "^5.2.1"
  }
}
